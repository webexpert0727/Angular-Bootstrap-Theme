block pageVars
	- var pageTitle   = "Advance Statistics Cards"
	- var pageSubTitle = "Extended default cards"
	- var description = "Exteding default bootstrap card functionality."
	- var activeMenu  = "card-statistics"

extends template

append breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"Components"}, {name:"Statistics Cards"}])

//- Include page content in page block
append content
	include ../contents/card-statistics.html

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
	//- Knob JS
	script(src='../../../app-assets/vendors/js/extensions/jquery.knob.min.js', type='text/javascript')
	//- Morris Chart
	script(src='../../../app-assets/vendors/js/charts/raphael-min.js', type='text/javascript')
	script(src='../../../app-assets/vendors/js/charts/morris.min.js', type='text/javascript')
	//- Sparkline Chart JS
	script(src='../../../app-assets/vendors/js/charts/jquery.sparkline.min.js', type='text/javascript')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
	//- statistics JS
	script(src='../../../app-assets/js/scripts/cards/card-statistics.js', type='text/javascript')

append pagecss
	link(rel='stylesheet', type='text/css', href='../../../app-assets/css#{rtl}/core/colors/palette-gradient.css')
	link(rel='stylesheet', type='text/css', href='../../../app-assets/fonts/simple-line-icons/style.min.css')
