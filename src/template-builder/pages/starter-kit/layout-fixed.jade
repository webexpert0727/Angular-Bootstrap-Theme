block pageVars
	- var pageTitle    = "Fixed Layout"
	- var pageSubTitle = "Fixed navbar, navigation & Footer"
	- var description  = "The fixed layout page structure have fixed navbar, navigation and footer."
	- var activeMenu   = "fixed"

extends template

append pageConfig
	- var headerType = 'sk-header'
	- var starterKit  = true

append navbarConfig
	- var navbarPosition = "navbar-fixed-top"
	- var navbarHideOnScroll = false

append horizontalMenuConfig
	- var menuType = 'navbar-fixed'

append verticalMenuConfig
	- var menuType = 'menu-fixed'

append footerConfig
	- var footerType = "navbar-fixed-bottom"
	- var footerHideOnScroll = false

append breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"Starters Kit"}, {name:"Fixed Layout"}])

//- include  page content in page block
append content
	include ../../contents/starter-kit/starter-page-content.html