block pageVars
	- var pageTitle    = "Light Layout"
	- var pageSubTitle = "Light template layout"
	- var description  = "The light layout has light version navbar, navigation & footer."
	- var activeMenu   = "light"

extends template

append pageConfig
	- var headerType = 'sk-header'
	- var logoType = 'dark'
	- var starterKit  = true

append navbarConfig
	- var navbarColor = "navbar-light"

append verticalMenuConfig
	- var menuColor = "menu-light"

append horizontalMenuConfig
	- var menuColor = "navbar-light"

append footerConfig
	- var footerColor = "footer-light"

append breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"Starters Kit"}, {name:"Light Layout"}])

//- include  page content in page block
append content
	include ../../contents/starter-kit/starter-page-content.html