block pageVars
	- var pageTitle = "Full Calendar Extra"
	- var pageSubTitle = "Full calendar extra examples"
	- var description = "FullCalendar is a drag-n-drop jQuery plugin for displaying events on a full-sized calendar."
	- var activeMenu = "full-calender-extra"

extends template

append breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"}, {name:"Full Calendar"}])



//- Include page content in page block
append content
	include ../contents/full-calender-extra.html

//- Vendor CSS
//------------------------------
//- Add vendor specific CSS
append vendorcss
	link(rel='stylesheet', type='text/css', href='../../../app-assets/vendors/css/calendars/fullcalendar.min.css')

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
	script(src='../../../app-assets/vendors/js/extensions/moment.min.js', type='text/javascript')
	script(src='../../../app-assets/vendors/js/extensions/fullcalendar.min.js', type='text/javascript')
	script(src='../../../app-assets/vendors/js/extensions/gcal.js', type='text/javascript')
	script(src='../../../app-assets/vendors/js/extensions/lang-all.js', type='text/javascript')

//- Page CSS
//------------------------------
//- Add page specific CSS
append pagecss
	link(rel='stylesheet', type='text/css', href='../../../app-assets/css#{rtl}/plugins/calendars/fullcalendar.css')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
	script(src='../../../app-assets/js/scripts/extensions/fullcalendar.js', type='text/javascript')