block pageVars
	- var pageTitle = "Switch"
	- var pageSubTitle = "Turn checkboxes and radio buttons in switches"
	- var description  = "Bootstrap switch and switchery are best switches with many options."
	- var activeMenu = "form-switch"

extends template

append breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"Form Components"}, {name:"Switch"}])

//- Include page content in page block
append content
	include ../contents/form-switch.html

append vendorcss
	//- Switchery CSS
	link(rel='stylesheet', type='text/css', href='../../../app-assets/vendors/css/forms/toggle/switchery.min.css')

append vendorjs
	//- Bootstrap checkbox JS
	script(src='../../../app-assets/vendors/js/forms/toggle/bootstrap-checkbox.min.js', type='text/javascript')
	//- Switchery JS
	script(src='../../../app-assets/vendors/js/forms/toggle/switchery.min.js', type='text/javascript')

append pagejs
	//- Template JS for checkboxes and radios
	script(src='../../../app-assets/js/scripts/forms/switch.js', type='text/javascript')

append pagecss
	link(rel='stylesheet', type='text/css', href='../../../app-assets/css#{rtl}/plugins/forms/switch.css')
