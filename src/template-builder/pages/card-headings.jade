block pageVars
	- var pageTitle    = "Card Headings"
	- var pageSubTitle = "Card Headings Options"
	- var description  = "A card is a flexible and extensible content container. It includes options for headers and footers, a wide variety of content, contextual background colors, and powerful display options. Cards require a small amount of markup and classes to provide you with as much control as possible. These classes and markup are flexible though and can typically be remixed and extended with ease."
	- var activeMenu   = "card-headings"

extends template

append breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"Components"}, {name:"Bootstrap Cards"}])

//- Include page content in page block
append content
	include ../contents/card-headings.html


//- Vendor CSS
//------------------------------
//- Add vendor specific CSS
append vendorcss
	//- Switchery CSS
	link(rel='stylesheet', type='text/css', href='../../../app-assets/vendors/css/forms/toggle/switchery.min.css')

append pagecss
	link(rel='stylesheet', type='text/css', href='../../../app-assets/css#{rtl}/plugins/forms/switch.min.css')

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
	//- Bootstrap checkbox JS
	script(src='../../../app-assets/vendors/js/forms/toggle/bootstrap-checkbox.min.js', type='text/javascript')
	//- Switchery JS
	script(src='../../../app-assets/vendors/js/forms/toggle/switchery.min.js', type='text/javascript')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
	//- Template JS for cards
	script(src='../../../app-assets/js/scripts/forms/switch.js', type='text/javascript')